{
  "name": "divorce-respondent-frontend",
  "description": "Divorce Respondent Frontend",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "node": ">=12.13.0"
  },
  "jest": {
    "verbose": true,
    "testURL": "https://localhost:3000"
  },
  "scripts": {
    "start": "NODE_PATH=. node server.js",
    "setup": "NODE_PATH=.",
    "dev": "NODE_ENV=dev NODE_PATH=. node-dev server.js",
    "mocks": "NODE_ENV=dev NODE_PATH=. node-dev mocks/index.js",
    "test": "NODE_PATH=. NODE_ENV=testing LOG_LEVEL=OFF nyc mocha --opts 'test/unit/mocha.opts' --exit 'test/unit/**/*.test.js' --timeout 15000",
    "test:all": "yarn lint; yarn test:unit; yarn test:a11y; yarn test:validation;",
    "test:unit": "NODE_PATH=. NODE_ENV=testing LOG_LEVEL=OFF mocha --opts 'test/unit/mocha.opts' --exit 'test/unit/**/*.test.js' --timeout 15000",
    "test:e2e": "NODE_PATH=. LOG_LEVEL=ERROR codeceptjs run -c test/e2e/codecept.conf.js --steps",
    "test:smoke": "NODE_PATH=. LOG_LEVEL=ERROR codeceptjs run -c test/e2e/codecept.smoke.conf.js --steps",
    "test:coverage": "nyc check-coverage --statements 80 --branches 80 --functions 80 --lines 80",
    "test:a11y": "NODE_ENV=testing NODE_PATH=. LOG_LEVEL=ERROR mocha --exit test/a11y --reporter spec --recursive --timeout 15000 --exit --reporter mochawesome --reporter-options reportDir=functional-output,reportFilename=a11y",
    "sonar-scan": "node_modules/sonar-scanner/bin/sonar-scanner",
    "test:functional": "NODE_PATH=. LOG_LEVEL=DEBUG codeceptjs run-multiple parallel -c test/e2e/codecept.conf.js --steps --grep '@Pipeline' --reporter mocha-multi",
    "test:fullfunctional": "NODE_PATH=. LOG_LEVEL=DEBUG codeceptjs run-multiple parallel -c test/e2e/codecept.conf.js --steps --grep '@Pipeline' --reporter mocha-multi",
    "test:validation": "NODE_PATH=. NODE_ENV=testing LOG_LEVEL=ERROR mocha --exit test/w3cjs --timeout 30000",
    "test:crossbrowser": "./bin/run-crossbrowser-tests.sh",
    "test-crossbrowser-e2e": "NODE_PATH=. NODE_ENV=ci LOG_LEVEL=DEBUG node_modules/.bin/codeceptjs run-multiple  ${BROWSER_GROUP:-'--all'} -c test/e2e/saucelabs.conf.js --steps --grep '@Pipeline' --reporter mochawesome",
    "lint": "eslint ."
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@hmcts/ctsc-web-chat": "^0.3.11",
    "@hmcts/div-document-express-handler": "^1.1.0",
    "@hmcts/div-idam-express-middleware": "^6.6.2",
    "@hmcts/look-and-feel": "4.0.9",
    "@hmcts/nodejs-healthcheck": "^1.7.0",
    "@hmcts/nodejs-logging": "^3.0.1",
    "@hmcts/one-per-page": "^5.3.0",
    "@hmcts/properties-volume": "^0.0.9",
    "applicationinsights": "1.7.0",
    "applicationinsights-native-metrics": "^0.0.5",
    "cookie-parser": "^1.4.4",
    "cookies": "^0.8.0",
    "express": "^4.17.1",
    "express-limiter": "^1.6.1",
    "glob": "^7.1.6",
    "handlebars": ">=4.3.0",
    "helmet": "^3.12.2",
    "hpkp": "^2.0.0",
    "html-entities": "^1.2.1",
    "ioredis": "^4.14.1",
    "joi": "^14.3.1",
    "launchdarkly-node-server-sdk": "^5.13.1",
    "lodash": "^4.17.19",
    "marked": ">=0.7.0",
    "moment": "^2.24.0",
    "os": "^0.1.1",
    "paths": "^0.1.1",
    "redis": "^2.8.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.8",
    "serialize-javascript": ">=2.1.1",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@hmcts/div-idam-test-harness": "^1.6.0",
    "@hmcts/div-test-harness": "^1.0.4",
    "@hmcts/one-per-page-test-suite": "^5.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-jq": "^0.0.9",
    "codeceptjs": "^2.4.3",
    "domino": "^2.1.4",
    "eslint": "^4.19.1",
    "eslint-plugin-mocha": "^5.0.0",
    "http-status-codes": "^1.4.0",
    "ioredis-mock": "^4.19.0",
    "istanbul": "^0.4.5",
    "istanbul-api": "2.1.6",
    "istanbul-reports": "2.2.7",
    "jest": "^26.0.1",
    "mocha": "^5.2.0",
    "mochawesome": "^3.0.2",
    "mocha-junit-reporter": "^1.23.3",
    "mocha-multi": "^1.1.3",
    "mockserver": "^2.1.1",
    "nock": "^12.0.3",
    "node-dev": "^4.0.0",
    "nyc": "^15.0.0",
    "pa11y": "^4.0.1",
    "pre-commit": "^1.2.2",
    "proxyquire": "^2.1.3",
    "puppeteer": "^2.1.0",
    "randomstring": "^1.1.5",
    "require-directory": "^2.1.1",
    "rewire": "^4.0.1",
    "sinon": "^5.0.7",
    "sinon-chai": "^3.4.0",
    "sonar-scanner": "^3.1.0",
    "supertest": "^3.0.0",
    "w3cjs": "^0.4.0",
    "webdriverio": "^4.13.1",
    "zepto-node": "^1.0.0"
  },
  "resolutions": {
    "assign-deep": ">=1.0.1",
    "braces": "^2.3.1",
    "lodash": "^4.17.11",
    "handlebars": ">=4.3.0",
    "mem": "^4.0.0",
    "marked": ">=0.7.0",
    "minimist": "^1.2.5",
    "serialize-javascript": ">=2.1.1",
    "yargs-parser": ">=13.1.2 <14.0.0 || >=18.1.2  ",
    "bl": ">=4.0.3"
  },
  "nyc": {
    "report-dir": "coverage",
    "temp-directory": "./coverage/.nyc_output",
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": [
      "test/**/*",
      "mocks/**/*"
    ]
  }
}
