{
  "name": "divorce-respondent-frontend",
  "description": "Divorce Respondent Frontend",
  "version": "0.0.1",
  "engines": {
    "node": ">=8.9.4 <9.0.0"
  },
  "scripts": {
    "start": "NODE_PATH=. node server.js",
    "setup": "NODE_PATH=.",
    "dev": "NODE_PATH=. node-dev server.js",
    "test": "NODE_PATH=. NODE_ENV=testing LOG_LEVEL=ERROR nyc mocha 'test/unit/**/*.test.js'",
    "test:unit": "NODE_PATH=. NODE_ENV=testing LOG_LEVEL=ERROR mocha 'test/unit/**/*.js'",
    "test:e2e": "NODE_PATH=. LOG_LEVEL=ERROR codeceptjs run -c test/e2e/codecept.conf.js --steps --invert",
    "test:smoke": "NODE_PATH=. LOG_LEVEL=ERROR codeceptjs run -c test/e2e/codecept.smoke.conf.js --steps --invert",
    "test:overnight": "NODE_PATH=. LOG_LEVEL=ERROR codeceptjs run-multiple saucelabs -c test/e2e/codecept.overnight.conf.js --steps",
    "test:coverage": "nyc check-coverage --statements 80 --branches 80 --functions 80 --lines 80",
    "test:a11y": "NODE_PATH=. NODE_ENV=testing LOG_LEVEL=ERROR mocha test/a11y --timeout 15000",
    "test:nsp": "nsp check",
    "sonar-scan": "node_modules/sonar-scanner/bin/sonar-scanner",
    "test:functional": "NODE_PATH=. LOG_LEVEL=ERROR codeceptjs run -c test/e2e/codecept.conf.js --steps --invert",
    "test:validation": "NODE_PATH=. NODE_ENV=testing LOG_LEVEL=ERROR mocha test/w3cjs",
    "lint": "eslint ."
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@hmcts/div-idam-express-middleware": "https://github.com/hmcts/div-idam-express-middleware#6.0.0",
    "@hmcts/look-and-feel": "^1.19.2",
    "@hmcts/nodejs-healthcheck": "^1.4.6",
    "@hmcts/nodejs-logging": "https://github.com/hmcts/nodejs-logging#771bb219e86d79d999d7edb17b10c69194d614fd",
    "@hmcts/one-per-page": "https://github.com/hmcts/one-per-page#ca4687ca38e35d50e10bc7d92f3fbaea69682854",
    "applicationinsights": "^1.0.3",
    "cookie-parser": "^1.4.3",
    "cookies": "^0.7.1",
    "copy-webpack-plugin": "^4.5.2",
    "express": "^4.16.3",
    "express-limiter": "^1.6.1",
    "glob": "^7.1.2",
    "helmet": "^3.12.0",
    "i18next": "^11.3.1",
    "ioredis": "^3.2.2",
    "joi": "^13.3.0",
    "moment": "^2.22.1",
    "os": "^0.1.1",
    "paths": "^0.1.1",
    "reform-pattern-library": "https://github.com/dtaylor7/reform-pattern-library.git",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.5"
  },
  "devDependencies": {
    "@hmcts/div-idam-test-harness": "https://github.com/hmcts/div-idam-test-harness.git",
    "@hmcts/one-per-page-test-suite": "https://github.com/hmcts/one-per-page-test-suite.git#299b662f1d396b20c566d311c69a348b82494839",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-jq": "^0.0.9",
    "codeceptjs": "^1.3.1",
    "domino": "^2.0.2",
    "eslint": "^4.19.1",
    "eslint-plugin-mocha": "^5.0.0",
    "mocha": "^3.0.0",
    "mochawesome": "^3.0.2",
    "node-dev": "^3.1.3",
    "nsp": "3.2.1",
    "nyc": "12.0.1",
    "pa11y": "^4.0.1",
    "pre-commit": "^1.2.2",
    "proxyquire": "^2.0.1",
    "puppeteer": "^1.4.0",
    "randomstring": "^1.1.5",
    "require-directory": "^2.1.1",
    "sinon": "^5.0.7",
    "sinon-chai": "^3.0.0",
    "sonar-scanner": "^3.1.0",
    "supertest": "^3.0.0",
    "w3cjs": "^0.4.0",
    "webdriverio": "^4.13.1",
    "zepto-node": "^1.0.0"
  },
  "nyc": {
    "report-dir": "coverage",
    "temp-directory": "./coverage/.nyc_output",
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
