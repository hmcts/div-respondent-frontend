{% from "../cookie-banner/macro.njk" import govukCookieBanner %}
{% include "./cookie-success-all-banner.njk" %}
{% include "./cookie-reject-all-banner.njk" %}
<div id="cm_cookie_notification" class="govuk-visually-hidden">
    {% set html %}
      <p class="govuk-body">We use some essential cookies to make this service work.</p>
      <p class="govuk-body">Weâ€™d like to set additional cookies so we can remember your settings,
       understand how people use the service and to improve government services.</p>
    {% endset %}

    {{ govukCookieBanner({
      ariaLabel: "Cookies on " + serviceName,
      hidden:hidden,

      messages: [
        {
          headingText: "Cookies on " + serviceName,
          html: html,
          actions: [
            {
              text: "Accept additional cookies",
              type: "button",
              value:"Accept all",
              name: "cookies",
              attributes: { id: 'cookie-accept-submit' },
              classes:"js-show"
            },
            {
              text: "Reject additional cookies",
              type: "button",
              name: "cookies",
              value: "Reject all",
              attributes: { id: 'cookie-reject-submit' },
              classes:"js-show"
            },
            {
              text: "View cookies",
              name: "analytics",
              href: "/cookies",
              attributes: { id: 'set-cookie-preferences' }
            }
          ]
        }
      ]
    }) }}
</div>
